<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="683dp"
        android:translationY="50dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="835dp"
            android:layout_alignParentStart="false"
            android:layout_centerVertical="false"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-150dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:adjustViewBounds="false"
            android:clickable="false"
            android:cropToPadding="false"
            android:focusableInTouchMode="false"
            android:scaleType="center"
            android:scaleX="1.6"
            android:scaleY="1.25"
            android:src="@drawable/citybackground"
            android:translationY="-105dp"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="436dp"
                android:layout_height="758dp"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:adjustViewBounds="false"
                android:baselineAlignBottom="false"
                android:clickable="false"
                android:cropToPadding="false"
                android:focusableInTouchMode="false"
                android:scaleType="center"
                android:scaleX="1.50"
                android:scaleY="1.50"
                android:src="@drawable/buildinglv1"
                android:translationX="0dp"
                android:translationY="-50dp"
                android:visibility="visible"
                app:srcCompat="@drawable/buildinglv1" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="398dp"
            android:layout_height="95dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="115dp"
            android:layout_marginEnd="420dp"
            android:layout_marginBottom="521dp"
            android:foregroundTint="#003D2828"
            android:includeFontPadding="false"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Big text"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="30sp"
            android:translationY="-50dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="193dp"
            android:layout_height="75dp"
            android:layout_marginStart="114dp"
            android:layout_marginTop="324dp"
            android:layout_marginEnd="104dp"
            android:layout_marginBottom="315dp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="small text"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:translationY="-200dp"
            android:visibility="gone" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="89dp"
                android:layout_height="74dp"
                android:layout_marginStart="288dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/anim"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="310dp"
                android:layout_height="55dp"
                android:layout_marginBottom="72dp"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="363dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="620dp"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </FrameLayout>
</layout>