        android:layout_marginEnd="96dp"
        android:layout_marginBottom="428dp"
        android:src="@drawable/logo1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/team_1_button"
